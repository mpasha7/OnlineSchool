@model OnlineSchool.Models.Lesson

@{
    ViewData["Title"] = "Удаление урока";
}

<h1>@ViewData["Title"]</h1>
<hr/>
<h3>Вы уверены, что хотите удалить этот урок?</h3>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Ссылка на видео
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoLink)
        </dd>
    </dl>
    
    <form asp-controller="Lessons" asp-action="Delete" asp-route-id="@Model.Id" asp-route-courseid="@ViewData["CourseId"]">
        <input type="hidden" asp-for="Id" />
        <input class="but" type="submit" value="Удалить урок" />
        <a asp-action="AddLessons" asp-route-id="@ViewData["CourseId"]">Вернуться к списку уроков</a>
    </form>
</div>
